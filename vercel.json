{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "autoplay=(self)"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/src/sound/(.*)",
      "dest": "/src/sound/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
